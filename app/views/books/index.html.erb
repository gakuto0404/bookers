 <body>
  <table>
   <p id="success"></p>
    <h1>Books</h1>
     <thead>
      <tr>
       <th>Title</th>
       <th>Body</th>
       <th></th>
      </tr>
     </thead>
     <tr>
      <% @books.each do |book| %>
      <td>
       <%= book.title %>
      </td>
      <td>
       <%= book.body %>
      </td>
      <td>
       <%= link_to "show", book_path(book.id), class: 'shoe-book' %>
      </td>
      <td>
       <%= link_to "edit", edit_book_path(book.id), class: 'edit-book' %>
      </td>
      <td>
       <%= link_to "destroy", book_path(book.id), class: 'destroy-book', method: :delete, "data-confirm" => "Are you sure?" %>
      </td>
      <% end %>
     </tr>
  </table>
  
  <h2>New book</h2>
  
  <% if @book.errors.any? %>
   <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
     <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
    </ul>
  <% end %>
  
  <%= form_with model: @books, url: '/books', class: 'new-book', method: :post do |f| %>
   <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
   </div>
   <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
   </div>
   <%= f.submit 'Create Book' %>
  <% end %>
 </body>