 <h1>Books</h1>
 <table>
  <thead>
   <tr>
    <th>Title</th><th>Body</th><th colspan="3"></th>
   </tr>
  </thead>
  <tr>
   <% @books.each do |book| %>
   <tr>
 ã€€ <td><%= book.title %></td>
   <td><%= book.body %></td>
   <td>
    <%= link_to "Show", book_path(book.id), class: 'shoe-book' %>
   </td>
   <td>
    <%= link_to "Edit", edit_book_path(book.id), class: 'edit-book' %>
   </td>
   <td>
    <%= link_to "Destroy", book_path(book.id), class: 'destroy-book', method: :delete, "data-confirm" => "Are you sure?" %>
